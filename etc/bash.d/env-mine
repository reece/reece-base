# -*-sh-*-

## set platform information and installation prefixes -*-

prefix=$HOME/opt/reece-base

PLATFORM_EXE="$prefix/bin/platform"
if [ -x "$PLATFORM_EXE" ]; then
    PLATFORM=`$PLATFORM_EXE`; 
else
    warn "$PLATFORM_EXE doesn't exist"
fi

PATH=$prefix/bin:$prefix/sbin:$PATH

CFLAGS="-I/usr/local/include${CFLAGS:+ $CFLAGS}"
LDFLAGS="-L/usr/local/lib${LDFLAGS:+ $LDFLAGS}"

if [ -n "$PLATFORM" ]; then
	## platform specific paths, libraries, includes
    exec_prefix=$HOME/opt/$PLATFORM

    PATH=$exec_prefix/bin:$exec_prefix/sbin:$PATH

	# gcc only:
    C_INCLUDE_PATH=$exec_prefix/include:$prefix/include
    LD_LIBRARY_PATH="$exec_prefix/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}";

    CFLAGS="-I$exec_prefix/include${CFLAGS:+ $CFLAGS}"
    LDFLAGS="-L$exec_prefix/lib${LDFLAGS:+ $LDFLAGS}"
    LIBRARY_PATH=$LD_LIBRARY_PATH
fi


#unset prefix exec_prefix
