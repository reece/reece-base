# These aliases make me yak.

alias spp='export PYTHONPATH="`pwd`"; echo PYTHONPATH=$PYTHONPATH'
alias sbt='export BUILDTOP=`pwd`; echo BUILDTOP=$BUILDTOP; spp'
alias app='export PYTHONPATH="$PYTHONPATH:`pwd`"; echo PYTHONPATH=$PYTHONPATH'


alias bt='cd $BUILDTOP'
alias pg='cd $PLAYGROUND'

# helpers for spg 
alias ppg='echo PLAYGROUND=$PLAYGROUND' 
alias prot2pg='export PROTECTED23=$PLAYGROUND; echo PROTECTED23=$PROTECTED23'  

# set current playground to your #1, #2 or #3 playground 
alias spg1='export PLAYGROUND=/kit23/site/${USER}/; ppg; prot2pg; export SITE23=${USER}' 
alias spg2='export PLAYGROUND=/kit23/site/${USER}2/; ppg; prot2pg; export SITE23=${USER}2' 
alias spg3='export PLAYGROUND=/kit23/site/${USER}3/; ppg; prot2pg; export SITE23=${USER}3'
alias wbt='cd $BUILDTOP/websites/23andme'
alias abt='cd $BUILDTOP/websites/admin'

#
# functions for setting up playgrounds
#
function s () { spp; sbt; eval "spg${1}"; }
alias s1='s 1'
alias s2='s 2'
alias s3='s 3'

alias m='(cd $BUILDTOP && make && ./tools/re/linkplayground.py && ./tools/re/fixplayground.py)'
alias fix='$BUILDTOP/tools/re/fixplayground.py'
