#-*-sh-*-

pipe-activate () {
	local locus_python_version=${1:-tip}
	local locus_pipe_version=${2:-$locus_python_version}
	export LOCUS_ROOT=${3:-$HOME/projects}

	local locus_python_path="$LOCUS_ROOT/locus-python/$locus_python_version"
	local locus_pipe_path="$LOCUS_ROOT/locus-pipe/$locus_pipe_version"

	source /locus/etc/profile
	PATH=/locus/opt/sbt/prd/bin:$PATH
	source $locus_python_path/etc/setup.bash
	source $locus_pipe_path/etc/setup.bash
	
	PS1="($locus_python_version/$locus_pipe_version)${PS1#(ve)}"
}
