# set env vars for stuff in ~/opt

for d in $HOME/opt/*; do
	if [ -f "$d/setup.sh" ]; then
	   RBASH_OPT_DIR="$d" source "$d/setup.sh"
	   continue
	fi

	# else...

	id=$d
	[ -d "$d/current" ] && id="$d/current"
	[ -d "$d/prd" ] && id="$d/prd"
	path_prepend_ie PATH "$d/bin"
	for dd in $id $id/arch-indep $id/$PLATFORM; do
		path_prepend_ie PATH "$dd/sbin"
		path_prepend_ie PATH "$dd/bin"
		path_prepend_ie PERL5LIB "$dd/share/perl"
		# could/should add lots more here for:
		# CC_INCLUDE, LIB, PERL5LIB, MAN, etc
	done
done

unset d dd id
