# -*-sh-*-

LS_FLAGS=
if [ "$COLORIZE" = 1 ]; then
	LS_FLAGS=--color=auto;
	if [ -f "$HOME/.dir_colors" ] && type dircolors >/dev/null 2>&1; then
		# `TERM=xterm' forces dircolors to think we're on a color terminal
		# even when we're not. I can't remember why on earth that's a good
		# idea...
		eval "`TERM=xterm dircolors $HOME/.dir_colors`"
	fi
fi


source ~/.svm/svm.sh
svm use 2.8.1.final
