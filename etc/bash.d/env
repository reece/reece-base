## env -- environment settings for all session types -*-sh-*-

PATH=$PATH:/usr/bin/X11:/usr/local/sbin:/usr/local/bin
PATH=$PATH:/usr/sbin:/usr/bin:/sbin:/bin

export REECE_BASE_DIR=${HOME}/opt/reece-base
export REECE_EXTERNAL_DIR=${HOME}/opt/reece-external

export CVSEDITOR=vi
export CVS_RSH=ssh
export DATEFMT="%Y/%m/%d"
export EMAIL_ADDRESS=reece@harts.net
export ENSCRIPT="-E -Gj -T4 --color"
export FULLNAME="Reece Hart"
export GZIP="-9v"
export INFOPATH=$prefix/info:/usr/local/info:/usr/share/info:/usr/info
export LATITUDE=37.62 LONGITUDE=-122.38  # 1 Sussex St, 94131
export LESS='-FiMRSXx4'
export LOCATE_PATH=$HOME/share/locatedb${LOCATE_PATH:+:$LOCATE_PATH}
export NAME="$FULLNAME"
export ORGANIZATION="Locus Development, Inc."
export PSQL_EDITOR='emacs -nw'
export VERSION_CONTROL=simple


# Python setup
export PYTHONPATH=${REECE_EXTERNAL_DIR}/lib/python${PYTHONPATH:+:$PYTHONPATH}
#export PYTHONSTARTUP=$HOME/.pythonrc.py

# Perl setup
PERL_PREFIX="${REECE_EXTERNAL_DIR}/perl"
PERL5LIB=$PERL_PREFIX/lib/perl5:${PERL5LIB:+:$PERL5LIB}
PATH=$PERL_PREFIX/bin:$PATH
export PERL5LIB
unset PERL_PREFIX

# R setup
export R_LIBS_USER="${REECE_EXTERNAL_DIR}/lib/R"


if type emacs >/dev/null 2>/dev/null; then
    export EDITOR='emacs'; 
fi

if type -p /usr/bin/java >/dev/null 2>/dev/null; then
	export JAVA_HOME=$(dirname $(dirname $(dirname $(readlink -f `type -p /usr/bin/java`))))
fi

if [ "$TERM" != "emacs" ]; then
    for PAGER in less more cat; do
	if `type -p $PAGER >/dev/null 2>/dev/null`; then
	    export PAGER
	    break;
	fi
	unset PAGER
    done
fi

if type -p lesspipe >/dev/null 2>/dev/null; then
    eval $(lesspipe);
fi


