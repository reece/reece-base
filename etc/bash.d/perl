export PERL_LOCAL_LIB_ROOT="/home/reece/opt/perl5/local"
PATH="$PERL_LOCAL_LIB_ROOT/bin${PATH:+:${PATH}}"; export PATH;
PERL5LIB="$PERL_LOCAL_LIB_ROOT/lib/perl5${PERL5LIB:+:${PERL5LIB}}"; export PERL5LIB;
PERL_MB_OPT="--install_base \"$PERL_LOCAL_LIB_ROOT\""; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE=$PERL_LOCAL_LIB_ROOT"; export PERL_MM_OPT;
