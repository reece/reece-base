startup_message off

caption always

bind + resize +5
bind - resize -5
bind q quit

defscrollback 5000

escape ^Ww

# From http://www4.informatik.uni-erlangen.de/~jnweiger/screen-faq.html:
termcapinfo xterm ti@:te@

