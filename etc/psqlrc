\set HISTSIZE 1000

\pset pager always
\setenv LESS -FiMRSXx4
\setenv PAGER less

-- colorized prompt, line break before each, with codes to set xtitle
\set PROMPT1 '%[%033]0;psql %n@%m/%/%007%]\n%[%033[1;33;40m%]%n@%m/%/%R%[%033[0m%]%# '
--            |--------- xtitle ---------|  |- color start -|           |-c. end-|

-- prettier borders and ¤ in place of NULLs
\pset linestyle unicode
\pset border 2
\pset null ¤


\timing
