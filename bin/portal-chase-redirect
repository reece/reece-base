#!/usr/bin/env python

import requests
import webbrowser

url = 'http://www.google.com/'

r = requests.get(url)
r.raise_for_status()

print(url + " -> " + r.url)
if not r.url.startswith(url):
    print("chasing link...")
    webbrowser.open(r.url)
else:
    print("looks like you're already connected")
